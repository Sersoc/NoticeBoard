<Page x:Class="NoticeBoard.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NoticeBoard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Button Width="200" Height="80" Click="Button_Click_1" Content="PostPage"></Button>
            </Grid>
            <Grid Grid.Row="1">
                <Button Width="200" Height="80" Click="Button_Click_2" Content="WritePage"></Button>
            </Grid>
            <Frame NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Page>
